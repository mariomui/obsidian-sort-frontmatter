{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "typeRoots": [
      "./typings",
      "./node_modules/@types",
      "./node_modules/obsidian",
      "./node_modules/@codemirror/state/dist"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "./fophidian.ts",
    "./typings/index.d.ts"
  ]
}